@using AlterStudio.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    ViewBag.Current = "Login";
}

<div class="panel panel-info col-md-4 col-md-offset-4">
    <div class="panel-heading">
        <h3 style="text-align: center">Вход в систему</h3>
    </div>
    <div class="panel-body">
        <p style="text-align: center" class="lead">Пожалуйста, войдите в систему, чтобы получить доступ:</p>
       @using (Html.BeginForm("Login", "Account", new {
           ReturnUrl = ViewBag.ReturnUrl
       }, FormMethod.Post, new {
           @class = "form-horizontal", role = "form" }))
       {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Имя пользователя:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
           <div class="form-group">
               <label>Пароль:</label>
               @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
           </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>
        </div>
            <input type="submit" value="Войти" class="btn btn-primary" />
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}