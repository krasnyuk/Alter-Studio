@model IEnumerable<AlterStudio.Models.Services>

@{
    ViewBag.Title = "Услуги";
}

<h2>Услуги</h2>

<p>
    <button type="button" class="btn btn-info btn-md"
            data-toggle="modal" data-target="#myModal">Добавить услугу
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    </button>
</p>
<table class="table table-hover table-bordered">
    <thead>
    <tr>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th class="col-md-2"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td >
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td >
                @Html.ActionLink("Редактировать", "Edit", new {id = item.ServiceId}, new {@class = "btn-sm btn-warning"})
               
                @Html.ActionLink("Удалить", "Delete", new {id = item.ServiceId}, new {@class = "btn-sm btn-danger"})
               
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Новая услуга</h4>
            </div>
            <div class="modal-body">
                @Html.Action("NewService")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            </div>
        </div>

    </div>
</div>

