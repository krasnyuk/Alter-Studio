@model AlterStudio.Models.Orders
@{
    ViewBag.Title = "Удаление";
}

<div class="panel panel-danger">
    <div class="panel-heading ">
        <h3>Вы уверены, что хотите удалить заказ № @Model.OrderId</h3>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ShootingDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ShootingDate)
            </dd>

        </dl>
    </div>
    <div class="panel-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Удалить" class="btn btn-danger" />
                @Html.ActionLink("Отмена", "List", null, new { @class = "btn btn-warning"} )
            </div>
        }
    </div>

</div>

