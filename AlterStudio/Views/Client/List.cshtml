@model IEnumerable<AlterStudio.Models.Clients>

@{
    ViewBag.Title = "Клиенты";
}

<h2>Список клиентов</h2>
<p>
    <button type="button" class="btn btn-info btn-md"
            data-toggle="modal" data-target="#myModal">
        Добавить клиента
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    </button>
</p>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th class="col-md-1">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th class="col-md-1">
                @Html.DisplayName("Город")
            </th>
            <th class="col-md-3">
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th class="col-md-3"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cities.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new
               {
                   id = item.ClientId
               }, new
               {
                   @class = "btn-sm btn-warning"
               })

                    @Html.ActionLink("Удалить", "Delete", new
               {
                   id = item.ClientId
               }, new
               {
                   @class = "btn-sm btn-danger"
               })
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Новый клиент</h4>
            </div>
            <div class="modal-body">
                @Html.Action("NewClient")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            </div>
        </div>

    </div>
</div>
